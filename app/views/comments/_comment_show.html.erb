<table style="width: 97%;">
  <tr>
    <td id="p-u-photo" rowspan="3" valign="top"><%= image_tag comment.user.photo_user.url, class: "img-circular" %></td>
    <td colspan="2"><h3 id="post"><%= comment.user.name + " " + comment.user.surname %></h3></td>
    <td>
      <div id="data-post"
        <% if comment.created_at %>
          <span><i class="glyphicon glyphicon-calendar"></i>
            Commnted <%= time_ago_in_words(comment.created_at) %> ago.</span>
        <% end %>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="3"><p id="post">&emsp;<%= comment.comment_text %></p></td>
  </tr>
  <tr>
    <td colspan="3" id="aaa">
      <ul class="list-inline list-unstyled">
        <li>
          <% if current_user?(comment.user) %>
          <span><%= link_to "Delete comment", comment.commentable, method: :delete, data: { confirm: "You sure?" } %></span>
          <% end %>
        </li>
        <li>Likes</li>
      </ul>
    </td>
  </tr>
</table>
<hr style="background: black; height: 3px;">
